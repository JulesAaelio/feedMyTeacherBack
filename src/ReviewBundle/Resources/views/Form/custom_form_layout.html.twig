{% block form_errors -%}
    {% if errors|length > 0 -%}
            <ul class="list-unstyled alert alert-danger">
                {%- for error in errors -%}
                    <li>
                        <span class="glyphicon glyphicon-exclamation-sign"></span> {{ error.message }}
                    </li>
                {%- endfor -%}
            </ul>
    {%- endif %}
{%- endblock form_errors %}
{# ... you will probably extend your base template, like base.html.twig #}
{% extends 'base.html.twig' %}
{% block title  %} Login - FeedMyTeacherBack {% endblock %}
{% block body %}
    <div class="col-md-4 margin-centered">
        <h1 class="title"> Log in to start reviewing !  </h1>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" method="post" class="align-items-center">
            <label for="username">Username:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button class="btn btn-default btn-lg btn-block  btn-mdb-color" type="submit">LOGIN</button>
            <a class="btn btn-default btn-lg btn-block  btn-pink" href="{{ url('register') }}">SIGN UP</a>
        </form>
    </div>
{% endblock %}